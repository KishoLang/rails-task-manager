<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<h3>Task done: <%= @task.completed %></h3>
  <% if @task.completed %>
  <input type="checkbox" checked disabled>
  <% else %>
  <input type="checkbox" disabled>
  <% end %>




<p><%= link_to "Back to tasks", tasks_path %></p>

<p><%= link_to "Edit task", edit_task_path %></p>

<p><%= link_to "Delete #{@task.title}", destroy_task_path, method: :delete, data: {confirm: "Are you sure" }%></p>
